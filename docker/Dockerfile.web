# Build stage
FROM node:20-alpine AS build
WORKDIR /src

# Copy package files
COPY src/frontend/package*.json ./
RUN npm ci

# Copy source and build
COPY src/frontend/ ./
RUN npm run build

# Runtime stage
FROM nginx:alpine
COPY --from=build /src/dist/frontend /usr/share/nginx/html
COPY docker/nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
